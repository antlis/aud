extends layouts/admin
block content
    mixin successItem(dayNum, img)
        - var klass = (img ? 'filled' : 'empty')
        .flex-col-1-7.item.success-item(class= klass, data-num= dayNum)
          a(href="#")
            if(img)
              img.img-responsive(src= img, alt="alt")
            else
              span.day-number= dayNum
          if img
            .success-details
              .success-details-inner
                p.close-container
                  a.close-details(href="#0")
                    i.fa.fa-close
                img(src= img, alt='alt')
                .success-desc
                  // a.target-users(href="#0")
                  //   i.fa.fa-pencil-square-o
                  a(href="#0")
                    i.fa.fa-link
                  a(href="#0")
                    i.fa.fa-camera
                  a(href="#0")
                    i.fa.fa-trash

    .container
      .flex-grid.admin-success
        - for(var i = 0; i <= 33; i++)
          if i == 0 || i == 8 || i == 14 || i == 15 || i == 16 || i == 17 || i == 18 || i == 19 || i == 20 || i == 30
            +successItem(i, './images/placeholder_car.jpg')
          else
            +successItem(i)
        .flex-col-1-7.item.more-days.success-item
            span Show more days
